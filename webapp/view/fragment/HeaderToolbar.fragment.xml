<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:fb="sap.ui.comp.filterbar"
>
	<fb:FilterBar
		id="filterbar"
		filterContainerWidth="16rem"
		showFilterConfiguration="false"
		useToolbar="false"
		search="onStart"
		showGoOnFB="{Auth>/enabledStart}"
	>
		<fb:filterGroupItems>
			<fb:FilterGroupItem
				name="filterGjahr"
				label="{i18n>filterGjahr}"
				groupName="Group1"
				visibleInFilterBar="true"
				mandatory="true"
			>
				<fb:control>
					<ComboBox
						id="fGjahr"
						width="100%"
						items="{
							path: '/GjahrMcSet',
							sorter: {
								path: 'Gjahr'
							}
						}"
						app:searchPropertyModel="Gjahr"
					>
						<core:Item
							key="{Gjahr}"
							text="{Gjahr}"
						/>
					</ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZammin"
				label="{i18n>filterZammin}"
				groupName="Group1"
				visibleInFilterBar="true"
				mandatory="true"
			>
				<fb:control>
					<ComboBox
						id="fZammin"
						width="100%"
						items="{
							path: '/ZamminMcSet',
							sorter: {
								path: 'Zammin'
							}
						}"
						app:searchPropertyModel="Zammin"
					>
						<core:Item
							key="{Zammin}"
							text="{Zammin}"
						/>
					</ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZufficioliv1"
				label="{i18n>filterZufficioliv1}"
				groupName="Group1"
				visibleInFilterBar="true"
			>
				<fb:control>
					<ComboBox
						id="fZufficioliv1"
						width="100%"
						app:searchPropertyModel="Zufficioliv1"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZufficioliv2"
				label="{i18n>filterZufficioliv2}"
				groupName="Group1"
				visibleInFilterBar="true"
			>
				<fb:control>
					<ComboBox
						id="fZufficioliv2"
						width="100%"
						app:searchPropertyModel="Zufficioliv2"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZcoddecrFrom"
				label="{i18n>filterZcoddecrFrom}"
				groupName="Group1"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						id="fZcoddecrFrom"
						app:searchPropertyModel="Zcoddecr"
						maxLength="7"
					/>
				</fb:control>
			</fb:FilterGroupItem>
		</fb:filterGroupItems>
		<fb:filterGroupItems>
			<fb:FilterGroupItem
				name="filterZcoddecrTo"
				label="{i18n>filterZcoddecrTo}"
				groupName="Group1"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						id="fZcoddecrTo"
						app:searchPropertyModel="Zcoddecr"
						maxLength="7"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZCodIpeFrom"
				label="{i18n>filterZCodIpeFrom}"
				groupName="Group1"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						id="fZCodIpeFrom"
						app:searchPropertyModel="ZCodIpe"
						maxLength="3"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZCodIpeTo"
				label="{i18n>filterZCodIpeTo}"
				groupName="Group1"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						id="fZCodIpeTo"
						app:searchPropertyModel="ZCodIpe"
						maxLength="3"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterFdatkFrom"
				label="{i18n>filterFdatkFrom}"
				groupName="Group2"
				visibleInFilterBar="true"
			>
				<fb:control>
					<DatePicker
						id="fFdatkFrom"
						displayFormat="yyyy"
						valueFormat="yyyy"
						placeholder=" "
						app:searchPropertyModel="Fdatk"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterFdatkTo"
				label="{i18n>filterFdatkTo}"
				groupName="Group2"
				visibleInFilterBar="true"
			>
				<fb:control>
					<DatePicker
						id="fFdatkTo"
						displayFormat="yyyy"
						valueFormat="yyyy"
						placeholder=" "
						app:searchPropertyModel="Fdatk"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZNumClaFrom"
				label="{i18n>filterZNumClaFrom}"
				groupName="Group2"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						id="fZNumClaFrom"
						app:searchPropertyModel="ZNumCla"
						maxLength="3"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZNumClaTo"
				label="{i18n>filterZNumClaTo}"
				groupName="Group2"
				visibleInFilterBar="true"
			>
				<fb:control>
					<Input
						id="fZNumClaTo"
						app:searchPropertyModel="ZNumCla"
						maxLength="3"
					/>
				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem
				name="filterZStatoCla"
				label="{i18n>filterZStatoCla}"
				groupName="Group2"
				visibleInFilterBar="true"
			>
				<fb:control>
					<ComboBox
						id="fZStatoCla"
						width="100%"
						items="{
							path: '/ZStatoClaMcSet',
							sorter: {
								path: 'ZStatoCla'
							}
						}"
						app:searchPropertyModel="ZStatoCla"
					>
						<core:Item
							key="{ZStatoCla}"
							text="{DescStatoCla}"
						/>
					</ComboBox>
				</fb:control>
			</fb:FilterGroupItem>
		</fb:filterGroupItems>
	</fb:FilterBar>
</core:FragmentDefinition>